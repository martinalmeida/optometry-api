generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int       @id @default(autoincrement())
  name     String
  lastname String?
  email    String    @unique
  password String
  created  DateTime
  updated  DateTime?
  deleted  DateTime?
  status   Boolean   @default(true)
}

model Patients {
  id       Int       @id @default(autoincrement())
  name     String
  lastname String?
  tp_doc   String
  num_doc  BigInt    @unique
  gender   String
  age      Int
  phone    BigInt
  address  String?
  email    String?
  id_user  Int
  created  DateTime
  updated  DateTime?
  deleted  DateTime?
  status   Boolean   @default(true)
}
